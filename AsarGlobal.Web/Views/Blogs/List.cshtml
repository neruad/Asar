@using AsarGlobal.Web.App_Code
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="blog-content">
    <div class="container">
        <div class="blog-content-head text-left">
            <h3>Мои записи</h3>
        </div>
        <div class="section group">
            <div class="blog-grids">
                <div class="cont span_2_of_3">
                    <div class="col-md-8 blog-grid">
                        <div class="blog_posts">
                            <div class="blog_date">
                                <figure><span>5</span>Января</figure>
                            </div>
                            <div class="blog_desc">
                                <div class="blog_heading">
                                    <a href="~/Blogs/Content?name=about-vip">О пакете VIP</a>
                                    <p>опубликован 5 января 2017 г.</p>
                                </div>
                                <div class="section group example">
                                    <div class="col blog_1_of_2">
                                        <div class="blog_img">
                                            <a href="~/Blogs/Content?name=about-vip">
                                                <img src="~/Images/pic13.jpg" alt="image" class="img-responsive zoom-img">
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col blogdata_1_of_2">
                                        <div class="blog_data">
                                            <p>
                                                Мы сейчас работаем с VIP пакетом. Здесь все могут работать в одной системе и быстро зарабатывать
                                            </p>
                                            <div class="more">
                                                <span><a class="button outline-outward hvr-rectangle-in" href="~/Blogs/Content?name=about-vip">читать...</a></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>

                <div class="col-md-4 blog-grid1">
                    <div class="rsidebar span_1_of_3">
                        <a class="twitter-timeline" data-lang="ru" href="@Constants.TwitterProfile" data-tweet-limit="3">Tweets by aidana_agp</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
